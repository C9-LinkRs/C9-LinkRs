svg(width = "341" height = "571" fill="none" xmlns = "http://www.w3.org/2000/svg")
  foreignObject(x = "0" y = "0" width = "341" height = "571")
    div(xmlns = "http://www.w3.org/1999/xhtml")
      style.

        #player {
          /* Animation CSS properties */
          animation: appear 300ms ease-out forwards;

          /* Component CSS properties */
          width: 341px;
          height: 571px;
          background-color: #14213D;
          border-radius: 67px;
          opacity: 0.8;
          position: relative;
        }
        
        #timeline_base {
          position: absolute; 
          border: 2px solid rgba(229, 229, 229, 1);
          width: 290px;
          height: 290px;
          margin-top: 47px;
          margin-left: 21px;
          border-radius: 50%;
        }
        
        #svg_embedder {
          width: 341px;
          height: 571px;
        }

        #timeline_animated {
          position: absolute !important;
          left: -80px;
          top: -30px;
          transform: rotate(-90deg);
          stroke-dasharray: 917; /* (2PI * 146px) */
          stroke-dashoffset: 917;
          animation: progress 10s linear forwards;
        }

        #song_info {
          width: 341px;
          height: 171px;
          background-color: #CBD4C2;
          border-radius: 60px 60px 67px 67px;
          position: absolute;
          bottom: 0px;
        }

        .paused {
          animation-play-state: paused !important;
        }

        @keyframes appear {
          from {
            opacity: 0;
            transform: scale(0.6);
          }
          to {
            opacity: 0.8;
            transform: scale(1);
          }
        }

        @keyframes progress {
          to {
            stroke-dashoffset: 0;
          }
        }
      
      div(id="player")
        div(id="timeline_base")
        div(id="svg_embedder" xmlns="http://www.w3.org/1999/xhtml")
          svg(id="timeline_animated" height="300", width="500" xmlns = "http://www.w3.org/2000/svg")
            circle(cx="176", cy="150", r="146", stroke="#CBD4C2", stroke-width="9", fill="none")
        div()

        div(id="song_info")
